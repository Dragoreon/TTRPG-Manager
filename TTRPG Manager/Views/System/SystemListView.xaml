                    </GridViewColumn.CellTemplate>
                </GridViewColumn>

                <GridViewColumn>
                    <GridViewColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="D6, PBTA, mazmorras"/>
                        </DataTemplate>
                    </GridViewColumn.CellTemplate>
                </GridViewColumn>
                <!--<TextBlock Grid.Column="0" Grid.Row="1" Text="Espadachinas sáficas"></TextBlock>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="D6, PBTA, dramas"></TextBlock>-->
